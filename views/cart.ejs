<!DOCTYPE html>
<html lang="en">

    <%- include('partials/head')%>

<body>
    <%- include('partials/header')%>
    <main>

        <div class="container">
            <div class="titular">
                <h2 class="titulo">Mis Compras..</h2>
            </div>
            <section class="detalle">
                <div class="productos">
                    <% products.forEach(product => { %>
                        <%- include('partials/productCart', { product })%>
                    <% })%>
                </div>
            </section>
            <section class="resumen">
                <div class="subTotal">
                    <button>Sumar cupon de descuento</button>
                    <label for="">Subtotal :</label>
                    <input type="text" name="subTotal" value="$5800">
                </div>
                <div class="total">
                    <button>Calcular envio</button>
                    <label for="">total :</label>
                    <input type="text" name="total" value="$6800">
                </div>
                <div class="cart-btns">
                    <button>Continuar comprando</button>
                    <button>Finalizar Compra</button>
                </div>

            </section>
        </div>
    </main>
    
    <%- include('partials/footer')%>

</body>

</html>